---
import '../styles/global.css';
import Header from '../components/Header.astro';
import SocialMediaLinks from '../components/SocialMediaLinks';


interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- The CSS file is automatically included by Astro when imported at the top -->
  </head>
  <body class="bg-neutrals-900 text-neutrals-50">
    <Header />
    <slot />
    <footer class="py-8 text-center">
      <SocialMediaLinks client:load/>
      <p class="mt-4">Â© 2023 Fahd Azouz. All rights reserved.</p>
    </footer>
  </body>
</html>