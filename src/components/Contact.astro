<section id="contact" class="py-20 bg-neutrals-900">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-5xl font-bold mb-8 text-center">Get in Touch</h2>
      <form class="max-w-lg mx-auto">
        <div class="mb-4">
          <label for="name" class="block mb-2">Name</label>
          <input type="text" id="name" name="name" class="w-full p-2 rounded bg-neutrals-800 border border-neutrals-700" required>
        </div>
        <div class="mb-4">
          <label for="email" class="block mb-2">Email</label>
          <input type="email" id="email" name="email" class="w-full p-2 rounded bg-neutrals-800 border border-neutrals-700" required>
        </div>
        <div class="mb-4">
          <label for="message" class="block mb-2">Message</label>
          <textarea id="message" name="message" rows="4" class="w-full p-2 rounded bg-neutrals-800 border border-neutrals-700" required></textarea>
        </div>
        <button type="submit" class="bg-primary text-neutrals-50 px-6 py-3 rounded-full hover:bg-primary/80 transition-colors">
          Send Message
        </button>
      </form>
    </div>
  </section>